<weather>
    <!-- Clear (default) -->
    <condition id="clear" speedFactor="1.0" friction="1.0"/>
    
    <!-- Rain -->
    <condition id="rain" speedFactor="0.85" friction="0.7">
        <visual rainIntensity="0.7"/>
    </condition>
    
    <!-- Fog -->
    <condition id="fog" speedFactor="0.7" friction="0.9">
        <visual fogDensity="0.5"/>
    </condition>
</weather>